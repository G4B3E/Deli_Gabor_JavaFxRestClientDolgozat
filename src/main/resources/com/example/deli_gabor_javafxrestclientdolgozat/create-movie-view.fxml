<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>


<GridPane hgap="10.0" prefHeight="300.0" prefWidth="500.0" vgap="10.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.deli_gabor_javafxrestclientdolgozat.CreateMovieController">
   <columnConstraints>
      <ColumnConstraints halignment="CENTER" minWidth="75.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <Label text="Name:" />
      <Label text="Year:" GridPane.rowIndex="1" />
      <Label text="Prize:" GridPane.rowIndex="2" />
      <TextField fx:id="NameField" GridPane.columnIndex="1" />
      <TextField fx:id="PrizeField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <Spinner fx:id="YearField" prefWidth="10000.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <Button fx:id="SubmitButton" mnemonicParsing="false" onAction="#SubmitClick" prefWidth="100.0" text="Submit" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
   </children>
</GridPane>
